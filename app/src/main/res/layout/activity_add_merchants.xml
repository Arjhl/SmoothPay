<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".AddMerchants">

    <EditText
        android:id="@+id/tvMerchantName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Merchant Name"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="109dp" />

    <TextView
        android:id="@+id/tvUpiID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="arjunhl@ybl"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/tvMerchantName"
        tools:layout_editor_absoluteX="130dp" />

    <Button
        android:id="@+id/btnAddMerchant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Add Merchant"
        app:layout_constraintTop_toBottomOf="@+id/tvUpiID"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>